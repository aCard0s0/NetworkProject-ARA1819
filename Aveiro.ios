conf t

interface Loopback0
    ip address 192.100.1.3 255.255.255.0
    ip ospf 100 area 0
    no shutdown

! EmpA1 connection
interface FastEthernet0/1
    ip address 10.1.100.1 255.255.255.252
    no shutdown

! EmpB1 connection
interface FastEthernet1/0
    ip address 10.1.100.5 255.255.255.252
    no shutdown



router bgp 1000
    bgp router-id 192.100.1.3
    ! Porto
    neighbor 192.100.1.1 remote-as 1000
    neighbor 192.100.1.1 update-source Loopback0
    ! Lisboa
    neighbor 192.100.1.2 remote-as 1000
    neighbor 192.100.1.2 update-source Loopback0
    ! Oeiras
    neighbor 192.100.1.4 remote-as 1000
    neighbor 192.100.1.4 update-source Loopback0
    ! Cascais ??
end